{
  "name": "playgrounds",
  "description": "List of project templates for a starting point",
  "author": "Plusb Preco <plusb21@gmail.com>",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --ext .js,.ts .",
    "prettier": "prettier --write --ignore-path .gitignore \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\"",
    "clean": "rm -rf node_modules && lerna clean"
  },
  "license": "MIT",
  "homepage": "https://github.com/preco21/playgrounds#readme",
  "repository": "preco21/playgrounds",
  "bugs": {
    "url": "https://github.com/preco21/playgrounds/issues"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "extends": [
      "standard",
      "standard-react",
      "prettier",
      "prettier/standard",
      "prettier/react"
    ],
    "rules": {
      "prefer-destructuring": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "eslintIgnore": [
    "**/node_modules",
    "**/dist",
    "**/.next",
    "**/.out",
    "**/.serverless",
    "**/.webpack"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
